<?xml version="1.0" encoding="utf-8"?>
<resources>

    //fragment_add_product layout

    <style name="title_style">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/shape_edit_text</item>
        <item name="android:gravity">fill</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/red</item>
    </style>

    //adapter_product layout

    <style name="product_data_title_style">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="product_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>